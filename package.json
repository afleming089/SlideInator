{
  "name": "slide-generator",
  "private": true,
  "version": "1.0.0",
  "description": "User enters a topic and slides are auto created.",
  "license": "MIT",
  "author": "Anton Fleming",
  "type": "commonjs",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest",
    "electron": "electron .",
    "electron:start": "wait-on tcp:3000 && npm run electron",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none vite\" \"npm run electron:start\"",
    "electron:build": "npm run build && electron-builder -c.extraMetadata.main=build/main.js"
  },
  "build": {
    "extends": null,
    "appId": "com.antonfleming.slidegenerator",
    "productName": "SlideInator",
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "bootstrap": "^5.3.7",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "puppeteer": "^24.8.2",
    "react-bootstrap": "^2.10.10",
    "sqlite3": "^5.1.7",
    "vite": "^6.3.5"
  }
}
